{
    "version": 2,
    "builds": [
      { "src": "api/index.js", "use": "@vercel/node" }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "/api/index.js" },      // backend
      { "handle": "filesystem" },                           // static files
      { "src": "/(.*)", "dest": "/public/$1" }              // serve /public/*
    ]
  }
  